#!/usr/bin/env python3

from Cinema.Prompt import Launcher, Visualiser
from Cinema.Prompt.Geo import setWorld, UnplacedBox, LogicalVolume, Transformation3D

world = LogicalVolume("world", UnplacedBox(10, 10, 10))
world.placeDaughter("physicalbox", LogicalVolume("box", UnplacedBox(1, 1, 1)), Transformation3D(5 , 5, 5, 0,0,0))
setWorld(world)

Launcher().loadFakeGeoPhysics()
Visualiser().show()

